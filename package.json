{
  "name": "gradient-utils",
  "version": "0.0.1",
  "description": "css and svg gradient utils",
  "scripts": {
    "test": "jest --passWithNoTests",
    "build": "rollup -c",
    "circular": "dpdm -T --tree=false --warning=false --exit-code circular:1 src/**",
    "lint": "eslint --ext .js,.ts,.tsx ./src",
    "lint:fix": "eslint --ext .js,.ts,.tsx ./src --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isergey87/gradient-utils.git"
  },
  "keywords": [
    "gradient",
    "linear-gradient",
    "svg",
    "css-gradient",
    "svg-gradient"
  ],
  "author": "isergey87",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/isergey87/gradient-utils/issues"
  },
  "homepage": "https://github.com/isergey87/gradient-utils#readme",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "bracketSpacing": false,
    "arrowParens": "always",
    "jsxSingleQuote": true
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-typescript": "^7.23.3",
    "@rollup-extras/plugin-clean": "^1.3.9",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-jest": "^29.7.0",
    "core-js": "^3.34.0",
    "dpdm": "^3.14.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rollup": "^4.9.1",
    "rollup-plugin-multi-input": "^1.4.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
